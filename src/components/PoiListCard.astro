---
import type { ObjectInterface } from "../helpers/commonInterfaces";

interface Props {
  place: ObjectInterface;
  pathname?: string;
}

const { place, pathname } = Astro.props as Props;
---

<div
  class="group relative bg-white cursor-pointer my-10 mx-auto max-w-xs duration-500 overflow-hidden rounded-lg shadow-lg lg:flex lg:max-w-none hover:shadow-blue-300 hover:scale-105"
>
  <div class="flex-1 px-6 py-8 lg:p-12">
    <h3
      class="text-2xl font-bold text-gray-900 sm:text-3xl sm:tracking-tight capitalize"
    >
      {place.name}
    </h3>
    <p class="mt-6 text-base text-gray-500">
      {place.details}
    </p>
    <div class="mt-8">
      <div class="flex items-center">
        <h4
          class="flex-shrink-0 bg-white pr-4 text-base font-semibold text-indigo-600"
        >
          More Information
        </h4>
        <div class="flex-1 border-t-2 border-gray-200"></div>
      </div>
      <ul
        role="list"
        class="mt-8 space-y-5 lg:grid lg:grid-cols-2 lg:gap-x-8 lg:gap-y-5 lg:space-y-0"
      >
        <li class="flex items-start lg:col-span-1">
          <div class="flex-shrink-0">
            <!-- Heroicon name: mini/check-circle -->
            <svg
              class="h-5 w-5 text-green-400"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 
                          4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <a
            href={`https://www.google.com/maps/dir/?api=1&destination=${encodeURI(
              place.address
            )}`}
            class="ml-3 text-sm text-blue-400 cursor-pointer underline z-10 hover:text-blue-500"
            target="_blank"
          >
            {place.address}
          </a>
        </li>

        <li class="flex items-start lg:col-span-1">
          <div class="flex-shrink-0">
            <!-- Heroicon name: mini/check-circle -->
            <svg
              class="h-5 w-5 text-green-400"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 
                          4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <p class="ml-3 text-sm text-gray-700">{place.business_hours}</p>
        </li>

        <li class="flex items-start lg:col-span-1">
          <div class="flex-shrink-0">
            <!-- Heroicon name: mini/check-circle -->
            <svg
              class="h-5 w-5 text-green-400"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 
                          4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <p class="ml-3 text-sm text-gray-700">{place.phone}</p>
        </li>
        <li class="flex items-start lg:col-span-1">
          <div class="flex-shrink-0">
            <!-- Heroicon name: mini/check-circle -->
            <svg
              class="h-5 w-5 text-green-400"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 
                          4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                clip-rule="evenodd"></path>
            </svg>
          </div>
          <p class="ml-3 text-sm text-gray-700">
            Price Range: {place.price ?? "N/A"}
          </p>
        </li>
      </ul>
    </div>
  </div>
  <div class="lg:flex lg:flex-shrink-0 lg:flex-col lg:justify-center">
    <div class="w-full h-56 relative lg:w-96 lg:h-full lg:max-h-96">
      <img
        src={place.files[0]?.url ?? "/"}
        class="relative w-full h-full object-cover"
        alt={place.name}
      />
      <div
        class="absolute mix-blend-multiply inset-0 duration-500 group-hover:bg-gray-300"
      >
      </div>
      <div
        class="absolute inset-0 flex items-center justify-center duration-500 md:opacity-0 group-hover:opacity-100"
      >
        <p class="text-white text-2xl font-bold animate-pulse">Click to View</p>
      </div>
    </div>
  </div>
  <a href={`${pathname ?? ""}/${place.slug}`} class="absolute inset-0"></a>
</div>
