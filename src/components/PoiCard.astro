---
import type { ObjectInterface } from "../helpers/commonInterfaces";
import { Img } from "astro-imagetools/components";
import { fixUrl } from "../helpers/commonUtils";

interface Props {
  data: ObjectInterface;
  pathname?: string;
}
const { pathname, data } = Astro.props as Props;
---

<a
  href={fixUrl(`${pathname ? `${pathname}/` : ""}${data.slug}`)}
  class="hover:scale-105 duration-300"
>
  <div
    class="flex flex-col rounded-2xl bg-white shadow-xl overflow-hidden h-80"
  >
    <div class="relative flex-1 px-6 pt-16 pb-8 md:px-8 overflow-hidden">
      <div class="absolute inset-0 object-cover w-full h-full">
        <Img
          src={`${data.files[0]?.url}`}
          alt={`${data.name} place`}
          sizes="(min-width: 768px) 480px, 100vw"
          layout="fill"
        />
      </div>
    </div>
    <div class="rounded-bl-2xl rounded-br-2xl bg-gray-50 p-6 md:px-8">
      <p
        class="text-base font-medium text-indigo-700 hover:text-indigo-600 capitalize"
      >
        {data.name}
        <span aria-hidden="true"> &rarr;</span>
      </p>
    </div>
  </div>
</a>
