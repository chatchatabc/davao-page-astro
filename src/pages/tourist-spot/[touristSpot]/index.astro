---
import dataTouristSpots from "../../../../data/tourist_spots.json";
import type { ObjectInterface } from "../../../helpers/commonInterfaces";
import PoiDetailsLayout from "../../../layouts/PoiDetailsLayout.astro";

export function getStaticPaths() {
  return dataTouristSpots.data.map((touristSpot) => {
    return {
      params: { touristSpot: touristSpot.slug },
      props: { touristSpot },
    };
  });
}
interface Props {
  touristSpot: ObjectInterface;
}

const { touristSpot } = Astro.props as Props;
---

<PoiDetailsLayout place={touristSpot}>
  <section>
    <h2 class="text-2xl font-bold pt-5">More Photos</h2>
    <div class="py-2 grid grid-cols-4 gap-4">
      {
        touristSpot.gallery.map((gallery: ObjectInterface) => {
          return (
            <div class="aspect-w-1 aspect-h-1 relative duration-500 group hover:scale-150 hover:z-10">
              <div class="absolute inset-0 rounded-lg overflow-hidden mx-auto group-hover:w-fit">
                <img
                  class="object-cover h-full w-full group-hover:object-contain"
                  src={gallery.url}
                  alt={gallery.url}
                />
              </div>
            </div>
          );
        })
      }
    </div>
  </section>
</PoiDetailsLayout>
