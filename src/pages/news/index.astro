---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";

const newsCollection = await getCollection("news");
newsCollection.reverse();
---

<Layout>
  <section class="bg-white px-4 pb-20 sm:px-6 lg:px-8 lg:pb-28">
    <div
      class="relative mx-auto max-w-lg divide-y-2 divide-gray-200 lg:max-w-7xl"
    >
      <div>
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
          News and Events
        </h2>
        <div
          class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:items-center lg:gap-5"
        >
          <p class="text-lg text-gray-500">
            Stay up-to-date on the latest happenings in Davao City by
            subscribing to our newsletter!
          </p>
        </div>
      </div>
      <div class="mt-6 grid gap-16 pt-10 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
        {
          newsCollection.map((news) => {
            const { data, slug } = news;
            const { date, title, type, excerpt } = data;

            return (
              <div>
                <p class="text-sm text-gray-500">
                  <time datetime={date.toISOString().split("T")[0]}>
                    {new Intl.DateTimeFormat("en", {
                      dateStyle: "medium",
                    }).format(date)}
                  </time>
                </p>
                <a href={`/news/${slug}`} class="mt-2 block">
                  <p class="text-xl font-semibold text-gray-900">
                    <span class="font-bold">{type}</span> -
                    {title ?? "No Tittle"}
                  </p>
                  <p class="mt-3 text-base text-gray-500">
                    {excerpt ?? "No Description"}
                  </p>
                </a>
                <div class="mt-3">
                  <a
                    href={`/news/${slug}`}
                    class="text-base font-semibold text-indigo-600 hover:text-indigo-500"
                  >
                    Read full story
                  </a>
                </div>
              </div>
            );
          })
        }
      </div>
    </div>
  </section>
</Layout>
