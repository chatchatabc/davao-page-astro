---
import Section from "../../components/sections/Section.astro";
import Layout from "../../layouts/Layout.astro";

const newsList = await Astro.glob("./*.md");
---

<Layout>
  <section class="bg-white px-4 pb-20 sm:px-6 lg:px-8 lg:pb-28">
    <div
      class="relative mx-auto max-w-lg divide-y-2 divide-gray-200 lg:max-w-7xl"
    >
      <div>
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
          News
        </h2>
        <div
          class="mt-3 sm:mt-4 lg:grid lg:grid-cols-2 lg:items-center lg:gap-5"
        >
          <p class="text-lg text-gray-500">
            Lorem ipsum dolor, sit amet consectetur adipisicing elit.
          </p>
        </div>
      </div>
      <div class="mt-6 grid gap-16 pt-10 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
        {
          newsList.map((news) => (
            <div>
              <p class="text-sm text-gray-500">
                <time datetime="2020-03-16">{news.frontmatter.date}</time>
              </p>
              <a href={news.url} class="mt-2 block">
                <p class="text-xl font-semibold text-gray-900">
                  {news.frontmatter.title ?? "No Tittle"}
                </p>
                <p class="mt-3 text-base text-gray-500">
                  {news.frontmatter.excerpt ?? "No Description"}
                </p>
              </a>
              <div class="mt-3">
                <a
                  href={news.url}
                  class="text-base font-semibold text-indigo-600 hover:text-indigo-500"
                >
                  Read full story
                </a>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
