---
import Layout from "../../layouts/Layout.astro";
import dataShoppings from "../../../data/shoppings.json";
import PoiListCard from "../../components/PoiListCard.astro";
import { Img } from "astro-imagetools/components";

const shoppings = [...dataShoppings.data];
const { pathname } = Astro.url;
---

<Layout>
  <!-- Hero Section -->
  <section class="relative bg-cover bg-center py-12 pb-20 lg:pt-16 lg:pb-32">
    <div class="absolute inset-0">
      <Img
        src="/images/shopping.jpg"
        alt="background"
        layout="fill"
        sizes="(min-width: 768px) 768px, 100vw"
      />
      <div class="bg-gray-900 absolute inset-0 opacity-50"></div>
    </div>
    <div class="relative container mx-auto p-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2
          class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl"
        >
          Shopping Malls Davao
        </h2>
        <p class="hidden mt-4 text-xl text-gray-200 max-w-3xl mx-auto md:block">
          If you're looking for something new and trendy, look no further than
          our stores in Davao City! We have everything you need to make your
          life easierâ€”from groceries to clothes to electronics and more.
        </p>
      </div>
    </div>
  </section>

  <section class="pb-16 sm:mt-12 sm:pb-20 lg:pb-28">
    <div class="relative">
      <div
        class="relative mx-auto max-w-7xl px-4 -mt-20 sm:px-6 lg:px-8 md:-mt-28"
      >
        {
          shoppings.map((shopping) => {
            return <PoiListCard place={shopping} pathname={pathname} />;
          })
        }
      </div>
    </div>
  </section>
</Layout>
