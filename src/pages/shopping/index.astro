---
import Layout from "../../layouts/Layout.astro";
import data_places from "../../../data/places.json";
import { getItemsByCatalog } from "../../helpers/commonUtils";

const places = getItemsByCatalog("shopping", data_places.data);
---

<Layout>
  <!-- Hero Section -->
  <section class="relative bg-cover bg-center py-12 sm:pt-16 lg:pt-20 sm:pb-24 lg:pb-32" >
    <div class="absolute inset-0">
      <img src="/images/shopping.jpg" class="h-full w-full object-cover" />
      <div class="bg-gray-900 absolute inset-0 opacity-50"></div>
    </div>
    <div class="relative container mx-auto p-4 sm:px-6 lg:px-8">
      <div class="text-center ">
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl">
          Shopping Malls Davao
        </h2>
        <p class="mt-4 text-xl text-neutral-200">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Odit sunt
          nulla facilis eos minima veniam veritatis rem temporibus a esse optio
          ratione repellendus magnam voluptate fugit nisi, totam autem tempora!
        </p>
      </div>
    </div>
  </section>

  <section class="pb-16 sm:mt-12 sm:pb-20 lg:pb-28">
    <div class="relative">
      <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 -mt-28">
        {places.map((place) => {
          const {links} = place;
          return <div
            class="bg-white my-10 mx-auto max-w-xs overflow-hidden rounded-lg shadow-lg lg:flex lg:max-w-none"
          >
            <div class="flex-1 px-6 py-8 lg:p-12">
              <h3
                class="text-2xl font-bold text-gray-900 sm:text-3xl sm:tracking-tight"
              >
                {place.name}
              </h3>
              <p class="mt-6 text-base text-gray-500">
                {place.details}
              </p>
              <div class="mt-8">
                <div class="flex items-center">
                  <h4
                    class="flex-shrink-0 bg-white pr-4 text-base font-semibold text-indigo-600"
                  >
                    More Information
                  </h4>
                  <div class="flex-1 border-t-2 border-gray-200"></div>
                </div>
                <ul
                  role="list"
                  class="mt-8 space-y-5 lg:grid lg:grid-cols-2 lg:gap-x-8 lg:gap-y-5 lg:space-y-0"
                >
                  <li class="flex items-start lg:col-span-1">
                    <div class="flex-shrink-0">
                      <!-- Heroicon name: mini/check-circle -->
                      <svg
                        class="h-5 w-5 text-green-400"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 
                          4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <p class="ml-3 text-sm text-gray-700">{place.address}</p>
                  </li>

                  <li class="flex items-start lg:col-span-1">
                    <div class="flex-shrink-0">
                      <!-- Heroicon name: mini/check-circle -->
                      <svg
                        class="h-5 w-5 text-green-400"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 
                          4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <p class="ml-3 text-sm text-gray-700">{place.business_hours}</p>
                  </li>

                  <li class="flex items-start lg:col-span-1">
                    <div class="flex-shrink-0">
                      <!-- Heroicon name: mini/check-circle -->
                      <svg
                        class="h-5 w-5 text-green-400"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20"
                        fill="currentColor"
                        aria-hidden="true"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 
                          4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd"></path>
                      </svg>
                    </div>
                    <p class="ml-3 text-sm text-gray-700">{place.phone}</p>
                  </li>
                  <li class="flex items-start lg:col-span-1">
                    <a href={links.length ? links[0].url : "#"} 
                    target={links.length ? "_blank" :"_self"} 
                    class="inline-flex items-center rounded border border-transparent 
                    bg-indigo-600 px-2.5 py-1.5 text-xs font-medium text-white shadow-sm 
                    hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 
                    focus:ring-offset-2">Read More</a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="lg:flex lg:flex-shrink-0 lg:flex-col lg:justify-center">
              <div class="w-full h-56 lg:w-96 lg:h-full lg:max-h-96">
                <img
                  src={place.files[0]?.url ?? "/"}
                  class="w-full h-full object-cover"
                  alt={place.name}
                />
              </div>
            </div>
          </div>})}
      </div>
    </div>
  </section>
</Layout>
