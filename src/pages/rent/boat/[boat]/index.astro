---
import dataPlaces from "../../../../../data/places.json";
import type { ObjectInterface } from "../../../../helpers/commonInterfaces";
import { getItemsByCatalog } from "../../../../helpers/commonUtils";
import { Icon } from "astro-icon";
import Layout from "../../../../layouts/Layout.astro";

export function getStaticPaths() {
  return getItemsByCatalog("shopping", dataPlaces.data).map((place) => {
    return {
      params: { boat: place.slug },
      props: { place },
    };
  });
}
interface Props {
  place: ObjectInterface;
}

const { place } = Astro.props as Props;
const { files } = place;
---

<Layout>
  <!-- Introduction -->
  <section class="pb-10">
    <div class="container px-10 mx-auto grid md:grid-cols-2 gap-5">
      <div class="carousel">
        {
          files.map((file: ObjectInterface, index: number) => {
            return (
              <div id={`slide${index}`} class="carousel-item relative w-full">
                <img
                  class="w-full h-full"
                  alt={file.url}
                  src={file.url ?? "/"}
                />
                <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
                  <a
                    href={`#slide${index - 1}`}
                    class={`btn btn-circle ${
                      index === 0 ? "opacity-0 pointer-events-none" : ""
                    }`}
                  >
                    ❮
                  </a>
                  <a
                    href={`#slide${index + 1}`}
                    class={`btn btn-circle ${
                      index === files.length - 1
                        ? "opacity-0 pointer-events-none"
                        : ""
                    }`}
                  >
                    ❯
                  </a>
                </div>
              </div>
            );
          })
        }
        <div id="slide1" class="carousel-item relative w-full">
          <img
            class="w-full h-full"
            alt="boat"
            src={place.files[0]?.url ?? "/"}
          />
          <div
            class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2"
          >
            <a href="#slide4" class="btn btn-circle">❮</a>
            <a href="#slide2" class="btn btn-circle">❯</a>
          </div>
        </div>
      </div>
      <div class="flex flex-col">
        <h3 class="text-2xl font-bold">Boat Name</h3>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Rem magni,
          possimus quasi, nesciunt doloribus omnis minima reprehenderit repellat
          consequatur autem quibusdam animi.
        </p>

        <!-- Boat Package -->
        <h3 class="text-xl py-1 font-semibold mt-auto">Boat Price Package</h3>
        <div class="overflow-hidden rounded-lg border">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr class="divide-x divide-gray-200">
                <th
                  scope="col"
                  class="py-3.5 pl-4 pr-4 text-left text-sm font-semibold text-gray-900 sm:pl-6"
                  >1 day</th
                >
                <th
                  scope="col"
                  class="px-4 py-3.5 text-left text-sm font-semibold text-gray-900"
                  >2 days</th
                >
                <th
                  scope="col"
                  class="px-4 py-3.5 text-left text-sm font-semibold text-gray-900"
                  >3 days</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
              <tr class="divide-x divide-gray-200">
                <td class="whitespace-nowrap p-4 text-sm">₱2,500</td>
                <td class="whitespace-nowrap p-4 text-sm">₱5,000</td>
                <td class="whitespace-nowrap p-4 text-sm">₱6,500</td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="p-2 flex items-center">
          <div class="flex-1">
            <p class="text-sm font-bold text-neutral-600">Estimated Price:</p>
            <p class="font-extralight">
              <span class="text-xl font-bold">₱500</span> / hour
            </p>
          </div>
          <a class="p-2 px-5 bg-blue-500 rounded-md text-white"> Inquire Now</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section>
    <div class="container flex justify-around mx-auto flex-wrap md:flex-nowrap">
      <div class="flex-1 flex justify-center gap-10">
        <div class="w-full max-w-[200px]">
          <h3 class="text-xl w-max font-bold">Need a Captain?</h3>
          <h4>₱8,000</h4>
          <p class="text-xs text-gray-600 leading-4">*Optional*</p>
        </div>
        <div class="self-center">
          <Icon name="ic:baseline-directions-boat" />
        </div>
      </div>
      <div class="flex-1 flex justify-center gap-10">
        <div class="w-full max-w-[200px]">
          <h3 class="text-xl w-max font-bold">Max Capacity</h3>
          <h4>8 PAX</h4>
          <p class="text-xs text-gray-600 leading-4">
            Lorem ipsum dolor sit, amet consectetur adipisicing elit.
          </p>
        </div>
        <div class="self-center">
          <Icon name="ic:baseline-people-alt" />
        </div>
      </div>
      <div class="flex-1 flex justify-center gap-10">
        <div class="w-full max-w-[200px]">
          <h3 class="text-xl w-max font-bold">Powerboat</h3>
          <h4>Powerboats, Pontoons, & RIBs</h4>
        </div>
        <div class="self-center">
          <Icon name="ic:baseline-speed" />
        </div>
      </div>
    </div>
  </section>

  <style>
    [astro-icon] {
      height: 3em;
      width: 3em;
      display: inline-block;
    }
    #title {
      text-shadow: 2px 2px aqua;
    }
  </style>
</Layout>
