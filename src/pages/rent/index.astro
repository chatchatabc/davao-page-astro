---
import { fixUrl } from "../../helpers/commonUtils";
import Layout from "../../layouts/Layout.astro";

const { pathname } = Astro.url;
---

<Layout>
  <section class="container grid mx-auto md:px-10 md:grid-cols-2">
    <div
      class="overflow-hidden relative duration-300 shadow-lg group md:hover:shadow-2xl"
    >
      <div class="absolute inset-0">
        <img
          src="/images/car rental.jpg"
          alt="car"
          class="w-full h-full object-cover"
        />
        <div
          class="bg-gradient-to-t from-slate-700 to-transparent absolute inset-0"
        >
        </div>
      </div>
      <div class="relative px-4 pt-52 pb-10 text-white">
        <h3 class="text-5xl font-bold py-2">Car Rental Davao</h3>
        <a
          href="https://carrentaldavao.com"
          target="_blank"
          class="ring-2 p-2 block w-fit duration-300 md:group-hover:px-10 md:group-hover:ring-4 md:hover:ring-blue-500 rounded-sm"
          >View More</a
        >
      </div>
    </div>
    <div
      class="overflow-hidden relative group duration-300 shadow-lg md:hover:shadow-2xl"
    >
      <div class="absolute inset-0">
        <img
          src="/images/boat rental.jpg"
          alt="car"
          class="w-full h-full object-cover"
        />
        <div
          class="bg-gradient-to-t from-slate-700 to-transparent absolute inset-0"
        >
        </div>
      </div>
      <div class="relative px-4 pt-52 pb-10 text-white">
        <h3 class="text-5xl font-bold py-2">Boat Rental Davao</h3>
        <a
          href={fixUrl(`${pathname}/boat`)}
          class="ring-2 p-2 block w-fit duration-300 md:group-hover:px-10 md:group-hover:ring-4 md:hover:ring-blue-500 rounded-sm"
          >View More</a
        >
      </div>
    </div>
  </section>
</Layout>
