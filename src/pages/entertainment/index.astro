---
import Layout from "../../layouts/Layout.astro";
import dataSubCatalogs from "../../../data/sub_catalogs.json";
import dataEntertainments from "../../../data/entertainments.json";
import FeaturedPoi from "../../components/sections/FeaturedPoi.astro";
import type { ObjectInterface } from "../../helpers/commonInterfaces";

const subCatalogs = dataSubCatalogs.data
  .filter((subCatalog) => subCatalog.catalog === "entertainment")
  .map((subCatalog) => {
    const newObject: ObjectInterface = { ...subCatalog };
    newObject.places = dataEntertainments.data.filter(
      (entertainment) => entertainment.sub_catalog === subCatalog.slug
    );
    return newObject;
  });
---

<Layout>
  <section class="bg-white">
    <div class="mx-auto max-w-7xl py-12 px-4 sm:px-6 lg:px-8 lg:py-24">
      <div class="space-y-12 lg:grid lg:grid-cols-3 lg:gap-8 lg:space-y-0">
        <div
          class="space-y-5 sm:space-y-4 flex flex-col h-full relative p-2 rounded-lg overflow-hidden"
        >
          <div class="relative">
            <h2 class="text-3xl font-bold tracking-tight sm:text-5xl">
              Entertainment
            </h2>
            <p class="text-xl text-gray-500">
              You'll find everything you need to make your stay in Davao
              unforgettable, from fun to relaxation to thrilling activities.
            </p>
          </div>
          <img src="/images/drinks.png" class="absolute bottom-0 left-0" />
          <!-- <div class="flex-1 flex flex-col -space-y-7 items-center pb-10 relative">
            <div class="flex w-full justify-center flex-nowrap gap-1">
              <img class="w-1/3 clip-path aspect-1" src="/images/bar.jpg" />
              <img class="w-1/3 clip-path aspect-1" src="/images/bar.jpg" />
            </div>
            <div class="flex w-full justify-center flex-nowrap gap-1">
              <img class="w-1/3 clip-path aspect-1" src="/images/bar.jpg" />
              <img class="w-1/3 clip-path aspect-1" src="/images/bar.jpg" />
              <img class="w-1/3 clip-path aspect-1" src="/images/bar.jpg" />
            </div>
            <div class="flex w-full justify-center flex-nowrap gap-1">
              <img class="w-1/3 clip-path aspect-1" src="/images/bar.jpg" />
              <img class="w-1/3 clip-path aspect-1" src="/images/bar.jpg" />
            </div>
          </div> -->
        </div>
        <div class="lg:col-span-2">
          <ul
            role="list"
            class="space-y-12 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:gap-y-12 sm:space-y-0 lg:gap-x-8"
          >
            {
              subCatalogs.map((subCatalog) => {
                return (
                  <li class="space-y-4">
                    <a href={`#${subCatalog.slug}`}>
                      <div class="rounded-lg shadow-lg relative overflow-hidden aspect-w-3 aspect-h-2">
                        <img
                          class="object-cover h-full w-full"
                          src={subCatalog.files[0]?.url ?? "/"}
                          alt={subCatalog.name}
                        />
                        <div class="absolute inset-0 bg-gray-800 opacity-50" />
                        <h3 class="absolute text-5xl font-bold text-center text-white top-1/3">
                          {subCatalog.name}
                        </h3>
                      </div>
                    </a>
                  </li>
                );
              })
            }

            <!-- More people... -->
          </ul>
        </div>
      </div>
    </div>
  </section>
  {
    subCatalogs.map((subCatalog) => {
      return <FeaturedPoi sub_catalog={subCatalog} external_link={true} />;
    })
  }
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
  .clip-path {
    clip-path: polygon(50% 0, 100% 25%, 100% 75%, 50% 100%, 0 75%, 0 25%);
  }
  .clip-path-left {
    clip-path: polygon(0% 0%, 75% 0%, 100% 50%, 75% 100%, 0% 100%);
  }
  .clip-path-right {
    clip-path: polygon(100% 0, 100% 50%, 100% 100%, 0% 100%, 25% 50%, 0% 0%);
  }
</style>
