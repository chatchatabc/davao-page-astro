---
import catalogs from "../../../data/catalogs.json";
import CatalogCard from "../CatalogCard.astro";

export interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<section class="bg-white">
  <h2 class="text-5xl pt-10 text-center">Catalogs</h2>
  <ul
    role="list"
    class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 container mx-auto mt-10"
  >
    {
      catalogs.data.map((catalog) => {
        return <CatalogCard catalog={catalog} />;
      })
    }
    <!-- More people... -->
  </ul>
</section>

