---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <!-- Hero Section -->
  <section
    class="relative bg-cover bg-center py-12 sm:pt-16 lg:pt-20 sm:pb-24 lg:pb-32"
  >
    <div class="absolute inset-0">
      <img src="/images/rent.jpg" class="h-full w-full object-cover" />
      <div class="bg-gray-900 absolute inset-0 opacity-50"></div>
    </div>
    <div class="relative container mx-auto p-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2
          class="text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl"
        >
          Rentals in Davao
        </h2>
        <p class="mt-4 text-xl text-neutral-200">
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Odit sunt
          nulla facilis eos minima veniam veritatis rem temporibus a esse optio
          ratione repellendus magnam voluptate fugit nisi, totam autem tempora!
        </p>
      </div>
    </div>
  </section>

  <section
    class="relative container grid gap-10 mx-auto py-10 md:px-10 md:grid-cols-2"
  >
    <div
      class="overflow-hidden relative duration-300 shadow-lg group md:hover:shadow-2xl md:hover:scale-105 md:rounded-lg"
    >
      <div class="absolute inset-0">
        <img
          src="/images/car rental.jpg"
          alt="car"
          class="w-full h-full object-cover"
        />
        <div
          class="bg-gradient-to-t from-slate-700 to-transparent absolute inset-0"
        >
        </div>
      </div>
      <div class="relative px-4 pt-36 pb-10 text-white">
        <h3 class="text-5xl font-bold py-2">Car Rental Davao</h3>
        <a
          href="https://carrentaldavao.com"
          target="_blank"
          class="ring-2 p-2 block w-fit duration-300 md:group-hover:px-10 md:group-hover:ring-4 md:hover:ring-blue-500 rounded-sm"
          >View More</a
        >
      </div>
    </div>
    <div
      class="overflow-hidden relative group duration-300 shadow-lg md:hover:shadow-2xl md:hover:scale-105 md:rounded-lg"
    >
      <div class="absolute inset-0">
        <img
          src="/images/boat rental.jpg"
          alt="car"
          class="w-full h-full object-cover"
        />
        <div
          class="bg-gradient-to-t from-slate-700 to-transparent absolute inset-0"
        >
        </div>
      </div>
      <div class="relative px-4 pt-36 pb-10 text-white">
        <h3 class="text-5xl font-bold py-2">Boat Rental Davao</h3>
        <a
          href="https://windandwavedavao.com"
          target="_blank"
          class="ring-2 p-2 block w-fit duration-300 md:group-hover:px-10 md:group-hover:ring-4 md:hover:ring-blue-500 rounded-sm"
          >View More</a
        >
      </div>
    </div>
  </section>
</Layout>
